<tool id="hubArchiveCreator" name="Hub Archive Creator" version="1.0.0">
  <description>
    This Galaxy tool permits to prepare your files to be ready for
    Assembly Hub visualization.
  </description>
  <command interpreter="python">hubArchiveCreator.py -g $GFF3_Track -f $Fasta_File -d $__tool_directory__ -o $output</command>
  <inputs>
    <param
      format="gff3"
      name="GFF3_Track"
      type="data"
      label="GFF3 track to display" />
      <param
        format="fasta"
        name="Fasta_File"
        type="data"
        label="Fasta track to process" />
  </inputs>
  <outputs>
    <data format="zip" name="output" />
  </outputs>

  <stdio>
    <regex match="^pass1"
           source="stderr"
           level="log"
           description="bedToBigBed" />
    <!-- TODO: Add the case pass1 and 0 chroms -->
    <!-- TODO: Add the case pass2 and 0 records or 0 fields -->
  </stdio>

  <help>
    This Galaxy tool permits to prepare your files to be ready for
    Assembly Hub visualization.
  </help>
</tool>
